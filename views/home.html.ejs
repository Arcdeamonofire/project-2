<html>
<head>
	<title>Forum Home</title>
	<link rel="stylesheet" type="text/css" href="/css/home.css">

</head>
<body>
	<% if(user !== undefined) { %>
		<p class="pull-right">Welcome, <%= user %></p>
	<% } else{ %>
		<p class="pull-right">Hello Please login to continue</p>
	<% }%>
	<% if(user !== undefined) { %>
		<form action="/login/destroy?_method=DELETE" method="POST">
			<input type="submit" value="Log Out" class="btn btn-default btn-xs pull-right"/>
		</form>
	<% } else{ %>
		<a class="btn btn-default btn-xs pull-right" role="button" href="/login">Login</a>
	<% }%>

	<h1 class="text-center">Forum Homepage</h1>
	<div>
		<a class="btn btn-default btn-xs" role="button" href="/forum/new">New Post</a>
	</div>
	<br>
	<table class="table table-striped table-hover">
		<% for(i=0; i<posts.length; i++){ %>
				<tr>
    				<td><h5><a href="/forum/<%=posts[i]._id%>"> <%=posts[i].title%></a></h5></td>
				    <td><p>Originally posted by: <%=posts[i].author%></p></td> 
				    <td><p>Comments: <%=posts[i].comments.length%> </p></td>
 				</tr>
		<% } %>
	</table>
	<footer>
	<p>Created by WeisseCracks </p>
	</footer>
</body>
</html>