<html>
<head>
	<title>Forum Home</title>
	<link rel="stylesheet" type="text/css" href="/css/home.css">

</head>
<body>
	<% if(user !== undefined) { %>
		<form action="/login/destroy?_method=DELETE" method="POST">
			<input type="submit" value="Log Out" class="btn btn-default"/>
		</form>
	<% } else{ %>
		<a class="btn btn-default" role="button" href="/login">Login</a>
	<% }%>

	<% if(user !== undefined) { %>
		<h1>Welcome, <%= user %></h1>
	<% } else{ %>
		<p>Hello Please login to continue</p>
	<% }%>

	<div>
		<a class="btn btn-default" role="button" href="/forum/new">New Post</a>
	</div>
	
	<table class="table table-striped table-bordered table-hover">
		<% for(i=0; i<posts.length; i++){ %>
			
				  <tr>
    				<td><a href="/forum/<%=posts[i]._id%>"> <%=posts[i].title%></a></td>
				    <td><p>Originally posted by: <%=posts[i].author%></p></td> 
				    <td><p>Comments: <%=posts[i].comments.length%> </p></td>
 				</tr>
		<% } %>
	</table>
	

</body>
</html>