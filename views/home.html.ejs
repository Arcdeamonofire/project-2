<html>
<head>
	<title>Forum Home</title>

</head>
<body>
	<% if(user !== undefined) { %>
		<form action="/login/destroy?_method=DELETE" method="POST">
			<input type="submit" value="Log Out" />
		</form>
	<% } else{ %>
		<a href="/login">Login</a>
	<% }%>



	<h1>This is the forum home page</h1>

	<% if(user !== undefined) { %>
		<h1>Welcome, <%= user %></h1>
	<% } else{ %>
		<p>Hello Please login to continue</p>
	<% }%>

	<a href="/forum/new">New Post</a>

		<% for(i=0; i<posts.length; i++){ %>
			<div>
			<a href="/forum/<%=posts[i]._id%>"> <%=posts[i].title%></a>
			<p>comment count should go here :/ </p>
			</div>
	<% } %>

</body>
</html>