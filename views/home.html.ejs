<html>
<head>
	<title>Forum Home</title>
	<link rel="stylesheet" type="text/css" href="/css/home.css">

</head>
<body>
	<% if(user !== undefined) { %>
		<form action="/login/destroy?_method=DELETE" method="POST">
			<input type="submit" value="Log Out" class="btn btn-default"/>
		</form>
	<% } else{ %>
		<a class="btn btn-default" role="button" href="/login">Login</a>
	<% }%>

	<% if(user !== undefined) { %>
		<h1>Welcome, <%= user %></h1>
	<% } else{ %>
		<p>Hello Please login to continue</p>
	<% }%>

	<a class="btn btn-default" role="button" href="/forum/new">New Post</a>

		<% for(i=0; i<posts.length; i++){ %>
			<div class="center-block">
			<a href="/forum/<%=posts[i]._id%>"> <%=posts[i].title%></a>
			<p>comment count should go here :/ </p>
			</div>
	<% } %>

</body>
</html>